{
  "format_on_save": "on",
  "formatter": "language_server",
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": ["biome", "!vtsls", "!typescript-language-server", "!eslint"]
    },
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": ["biome", "!vtsls", "!typescript-language-server", "!eslint"]
    },
    "TSX": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": ["biome", "!vtsls", "!typescript-language-server", "!eslint"]
    },
    "JSON": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": ["biome", "..."]
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": "language_server",
      "remove_trailing_whitespace_on_save": true
    }
  }
}
